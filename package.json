{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "url": "https://github.com/orlandogp/product-card-og.git",
    "type": "git"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "product-card-og",
  "author": "Orlando Gomez",
  "module": "dist/product-card-og.esm.js",
  "size-limit": [
    {
      "path": "dist/product-card-og.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/product-card-og.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@types/react-test-renderer": "^18.0.7",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@rollup/plugin-image": "^3.0.3",
    "@size-limit/preset-small-lib": "^11.1.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "babel-jest": "^29.7.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "product",
    "card",
    "react",
    "test"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
